<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/flickrPrimaryBackground</item>
        <item name="colorPrimaryDark">@color/flickrSecondaryBackground</item>
        <item name="colorAccent">@color/flickrBackgroundAccent</item>
        <item name="android:windowBackground">@color/flickrBackground</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Flickr" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/flickrPrimaryText</item>
        <item name="colorControlHighlight">@color/flickrBackground</item>
        <item name="android:actionMenuTextColor">@color/flickrPrimaryText</item>
        <item name="android:textColorSecondary">@color/flickrPrimaryText</item>
        <item name="android:background">@color/flickrPrimaryBackground</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/flickrPrimaryText</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme.Flickr.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Flickr.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
