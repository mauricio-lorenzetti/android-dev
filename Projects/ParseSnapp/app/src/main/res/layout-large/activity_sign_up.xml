<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mauk.app.parsesnapp.SignUpActivity"
    style="@style/AuthBackground">

    <include layout="@layout/auth_common_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="180dp">

        <include layout="@layout/auth_common_title" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_gravity="center_horizontal"
            style="@style/AuthFieldContainer">

            <EditText
                android:id="@+id/username_text"
                android:hint="@string/username_hint"
                style="@style/AuthEditText">
                <requestFocus/>
            </EditText>

            <EditText
                android:id="@+id/password_text"
                android:hint="@string/password_hint"
                android:inputType="textPassword"
                style="@style/AuthEditText"/>

            <EditText
                android:id="@+id/email_text"
                android:hint="@string/email_hint"
                android:inputType="textEmailAddress"
                style="@style/AuthEditText"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/light_purple_button"
            android:orientation="horizontal">

            <Button
                android:layout_height="match_parent"
                android:id="@+id/sign_up_button"
                android:text="@string/sign_up_button_label"
                android:layout_weight="1"
                android:layout_margin="0dp"
                style="@style/AuthButton"/>

            <ImageView
                android:id="@+id/buttonDivider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_divider"
                android:contentDescription="@string/content_desc_button_divider"
                />

            <Button
                android:layout_height="match_parent"
                android:id="@+id/cancel_button"
                android:text="@string/cancel_button_label"
                android:layout_weight="1"
                android:layout_margin="0dp"
                style="@style/AuthButton"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
